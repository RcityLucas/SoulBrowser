# SoulBrowser configuration example

default_browser: chromium
default_headless: false
output_dir: ./soulbrowser-output
session_timeout: 300
strict_authorization: false
policy_paths:
  - config/policies/browser_policy.json

soul:
  enabled: false
  model: gpt-4
  api_key: null
  prompts_dir: null

recording:
  screenshots: true
  video: false
  network: true
  video_quality: high
  screenshot_format: png

performance:
  enabled: true
  sampling_rate: 1.0
  thresholds:
    page_load_time: 3000
    first_contentful_paint: 1500
    largest_contentful_paint: 2500
    cumulative_layout_shift: 0.1
    first_input_delay: 100
