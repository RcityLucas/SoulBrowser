{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Twitter Feed",
  "description": "Normalized timeline entries parsed from Twitter/X profile pages.",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "const": "twitter_feed_v1"
    },
    "source_url": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "account_handle": {
      "type": ["string", "null"],
      "description": "Handle for the timeline owner"
    },
    "account_name": {
      "type": ["string", "null"],
      "description": "Display name for the timeline owner"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "author_handle": { "type": "string" },
          "author_name": { "type": ["string", "null"] },
          "content": { "type": "string" },
          "timestamp": { "type": ["string", "null"], "format": "date-time" }
        },
        "required": ["url", "author_handle", "content"],
        "additionalProperties": false
      }
    }
  },
  "required": ["schema", "items"],
  "additionalProperties": false
}
