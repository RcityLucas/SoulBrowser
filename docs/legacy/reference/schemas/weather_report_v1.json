{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Weather Snapshot",
  "description": "City-level weather widget flattened into structured fields (see data.parse.weather).",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "const": "weather_report_v1"
    },
    "source_url": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "URL of the observed weather page"
    },
    "captured_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp when the observation was captured"
    },
    "city": {
      "type": "string",
      "description": "City or region name"
    },
    "condition": {
      "type": "string",
      "description": "Primary condition text (e.g., Sunny, 多云)"
    },
    "temperature_high_c": {
      "type": "number",
      "description": "Forecast high temperature in °C"
    },
    "temperature_low_c": {
      "type": "number",
      "description": "Forecast low temperature in °C"
    }
  },
  "required": [
    "schema",
    "city",
    "condition",
    "temperature_high_c",
    "temperature_low_c"
  ],
  "additionalProperties": false
}
