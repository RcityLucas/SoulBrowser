{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "News Brief Items",
  "description": "Top news headlines + blurbs collected from generic observation snapshots.",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "const": "news_brief_v1"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "source": { "type": ["string", "null"] },
          "published_at": {
            "type": ["string", "null"],
            "format": "date-time"
          }
        },
        "required": ["title", "summary", "url"],
        "additionalProperties": false
      },
      "description": "Up to five items ranked by prominence"
    }
  },
  "required": ["schema", "items"],
  "additionalProperties": false
}
