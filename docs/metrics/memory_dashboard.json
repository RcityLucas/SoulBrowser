{
  "title": "SoulBrowser Â· Memory Center",
  "tags": ["SoulBrowser", "memory"],
  "timezone": "",
  "panels": [
    {
      "type": "stat",
      "title": "Total Queries",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "soul_memory_total_queries",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Hit Rate (%)",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 1
        }
      },
      "targets": [
        {
          "expr": "soul_memory_hit_rate_percent / 100",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Hits vs Misses",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(soul_memory_hit_queries[5m])",
          "legendFormat": "hits",
          "refId": "A"
        },
        {
          "expr": "rate(soul_memory_miss_queries[5m])",
          "legendFormat": "misses",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Stored vs Deleted",
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(soul_memory_records_stored_total[5m])",
          "legendFormat": "stored",
          "refId": "A"
        },
        {
          "expr": "rate(soul_memory_records_deleted_total[5m])",
          "legendFormat": "deleted",
          "refId": "B"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Current Records",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "soul_memory_records_current",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Hit Rate Trend",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "soul_memory_hit_rate_percent / 100",
          "legendFormat": "hit rate",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Template Uses",
      "gridPos": {"x": 0, "y": 20, "w": 6, "h": 4},
      "targets": [
        {
          "expr": "soul_memory_template_uses_total",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Template Success Rate (%)",
      "gridPos": {"x": 6, "y": 20, "w": 6, "h": 4},
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 1
        }
      },
      "targets": [
        {
          "expr": "soul_memory_template_success_rate_percent / 100",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Template Success Trend",
      "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "rate(soul_memory_template_success_total[5m])",
          "legendFormat": "success",
          "refId": "A"
        },
        {
          "expr": "rate(soul_memory_template_uses_total[5m])",
          "legendFormat": "uses",
          "refId": "B"
        }
      ]
    }
  ],
  "schemaVersion": 38,
  "version": 1
}
